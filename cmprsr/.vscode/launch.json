	"version": "0.2.0",
	"configurations": [
		{
			"command": "pnpm dev",
			"name": "Start dev server",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Debug App",
			"configurations": ["Start dev server", "Launch Chrome against localhost"],
			"stopAll": true
		}
	]
}
